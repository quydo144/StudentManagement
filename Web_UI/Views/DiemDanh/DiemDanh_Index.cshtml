@model IEnumerable<EntityFrameWork_BaiTapLon.Entities_BaiTapLon.LopHocPhan>

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="/Content/Dashboard/css/components.min.css" rel="stylesheet" />
    <link href="/Content/Dashboard/css/profile.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-1.12.4.js" integrity="sha256-Qw82+bXyGq6MydymqBxNPYTaUXXq7c8v3CwiYwLLNXU=" crossorigin="anonymous"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .selected {
            background-color: blueviolet;
            color: #fff;
        }
    </style>
</head>
<body>

    <div class="wrapper">
        <header class="header">
            <div class="container">
                <div class="header-content">
                    <h2>DANH SÁCH LỚP HỌC PHẦN</h2>
                </div>
            </div>
        </header>
        <div class="main-content main-dashboard">
            <div class="container">
                <div class="main-section-content" id="contnet">
                    <div class="row">
                        <div class="col-md-12">

                            <table id="tablLopHocPhan" class="table table-striped">
                                <thead>
                                    <tr class="tr">
                                        <th>Mã lớp học phần</th>
                                        <th>Tên lớp học phần</th>
                                        <th>Số lượng</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày kết thúc</th>
                                        <th>Ngày kết thúc đăng kí</th>
                                        <th>Trạng thái</th>
                                        <th>Mô tả</th>
                                        <th>&nbsp;&nbsp;Lựa chọn&nbsp;&nbsp;</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {

                                        <tbody>
                                            <tr class="danger">
                                                <td>@item.LopHocPhanId</td>
                                                <td>@item.tenLopHocPhan</td>
                                                <td>@item.soLuongSV</td>
                                                <td>@item.NgayBD.</td>
                                                <td>@item.NgayKT</td>
                                                <td>@item.NgayKTDK</td>
                                                <td>@item.TrangThai</td>
                                                <td>@item.Mota</td>
                                                <td style="font-size:1em;">
                                                    <form>
                                                        @Html.ActionLink("Điểm danh", "DiemDanh", new { id = item.LopHocPhanId })
                                                    </form>
                                                </td>
                                            </tr>
                                        </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

